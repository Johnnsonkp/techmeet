{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ],
      "../shared/*": [
        "../shared/*"
      ]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "allowJs": true,
    "types": [
      "react",
      "react-native",
      "node",
      "@react-native-async-storage/async-storage",
      "@types/expo"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../shared/**/*.ts",
    "../shared/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".expo",
    "dist"
  ],
  "extends": "expo/tsconfig.base"
}
